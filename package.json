{
  "name": "@probedjs/work-pool",
  "version": "0.2.0",
  "description": "A high-performance and flexible work pool",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "scripts": {
    "lint": "eslint src/**/*",
    "build:esm": "tsc -p tsconfig.esm.json && shx cp -R ./src/esm/* ./lib/esm/",
    "build:cjs": "tsc -p tsconfig.json  && shx cp -R ./src/cjs/* ./lib/cjs/",
    "build:postbuild": "shx cp ./lib/esm/index.d.ts ./lib/index.d.ts && shx rm ./lib/esm/*.d.ts && shx rm ./lib/cjs/*.d.ts",
    "build": "npm run build:cjs && npm run build:esm && npm run build:postbuild"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "typescript": "^4.2.4"
  },
  "author": {
    "name": "Francois Chabot",
    "email": "francois.chabot.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProbedJS/work-pool.git"
  }
}